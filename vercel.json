{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/next"
        },
        {
            "src": "api/*.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/upload",
            "dest": "/api/upload.py"
        },
        {
            "src": "/api/test",
            "dest": "/api/test.py"
        },
        {
            "src": "/api/health",
            "dest": "/api/health.py"
        },
        {
            "src": "/api/session/([^/]+)$",
            "dest": "/api/session.py"
        },
        {
            "src": "/api/session/([^/]+)/description",
            "dest": "/api/description.py"
        },
        {
            "src": "/api/session/([^/]+)/documents",
            "dest": "/api/documents.py"
        },
        {
            "src": "/api/chat/stream",
            "dest": "/api/chat.py"
        },
        {
            "src": "/api/pdf/([^/]+)/(.+)",
            "dest": "/api/pdf.py"
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/index.py"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ],
    "env": {
        "VERCEL": "1"
    }
}